<Page x:Class="SwissTransportGUI.Views.DepartureBoardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SwissTransportGUI.Views"
      xmlns:models="clr-namespace:SwissTransport.Models;assembly=SwissTransport"
      xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:prism="http://prismlibrary.com/"
      prism:ViewModelLocator.AutoWireViewModel="True"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DepartureBoardView">

    <Grid Background="{StaticResource PrimaryColor}">
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="80" Height="*"/>
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  Margin="10" Background="{StaticResource SecondaryColor}">
            <Label Content="Departure Station" 
                   VerticalAlignment="Center" 
                   Margin="0,0,10,0" Style="{StaticResource LargeText}"/>

            <ComboBox Text="{Binding Path=StationNameInput}" 
                      Width="200px" 
                      Height="30px" 
                      VerticalContentAlignment="Center"
                      IsEditable="True"
                      HorizontalAlignment="Left" 
                      AllowDrop="False"
                      IsDropDownOpen="{Binding ShowStationsDropDown}"
                      ItemsSource="{Binding Path=StationSearchResult}"
                      SelectedItem="{Binding Path=SelectedStation}">
                <ComboBox.ItemTemplate>
                    <DataTemplate DataType="models:Station">
                        <ComboBoxItem>
                            <Label Content="{Binding Name}"></Label>
                        </ComboBoxItem>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="SelectionChanged">
                        <b:InvokeCommandAction Command="{Binding Path=FindDeparturesCommand}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </ComboBox>

            <Button Content="Search stations" 
                    Style="{StaticResource RedButton}" 
                    Height="30" 
                    VerticalAlignment="Center"
                    Margin="10,0,0,0"
                    Command="{Binding Path=SearchStationsCommand}" />
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding DeparturesList}" IsReadOnly="True" Margin="10" />
    </Grid>
</Page>
