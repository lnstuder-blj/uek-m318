<Window x:Class="SwissTransportGUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:local="clr-namespace:SwissTransportGUI.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="{StaticResource PrimaryColor}">
        <TabControl TabIndex="0">
            <TabItem TabIndex="0" Header="Departures">
                <Frame Source="DepartureBoardView.xaml" />
            </TabItem>
            <TabItem TabIndex="0" Header="Connections">
                <Frame Source="ConnectionsView.xaml" />
            </TabItem>
            <TabItem TabIndex="0" Header="Nearby stations">
                <Frame Source="NearbyStationsView.xaml" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
